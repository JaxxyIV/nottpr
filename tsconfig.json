{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "declaration": true,
        "declarationDir": "dist/declare",
        "outDir": "dist",
        "allowJs": false,
        "moduleDetection": "force",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"]
}